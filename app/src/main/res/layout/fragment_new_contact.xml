<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nikhilkoganti.easycontacts.NewContactFragment"
        android:orientation="vertical"
    android:padding="18dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:text="@string/hello_blank_fragment" />-->

    <EditText
            android:id="@+id/id_edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLength="30" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/id_spinPhone"
                android:layout_width="120dp"
                android:layout_height="37dp"
                android:animateLayoutChanges="false"
                android:popupBackground="@android:color/darker_gray" />
            <EditText
                android:id="@+id/id_edtPhone"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="14"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="14"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/id_edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textWebEmailAddress" />

        <Button
            android:id="@+id/id_btnSave"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:text="Save" />
    </LinearLayout>